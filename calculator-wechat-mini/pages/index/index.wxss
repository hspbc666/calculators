page {
    background-color: #696969;
}
.content {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #696969;
    overflow-x: hidden;
}
.layout-top{
    width: 100%;
}
.layout-body{
    width: 100%;
}
.screen {
    text-align: right;
    line-height: 260rpx;
    padding: 0 20rpx;
    font-size: 60px;
    background-color: #0a0a0a;
    color: #fff;
    box-sizing: border-box;
    margin-top: 50rpx;
    margin-bottom: 10rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
}
.btn-group {
    display: flex;
    flex-direction: row;
    flex: 1;
    width: 100%;
    height: 5rem;
}
.item {
    width:25%;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
}
.item:active {
    background-color: #f58220;
}
.operator-input {
    color: #fef4e9;
    background: #fff;
    color: #000;
    border-radius: 10rpx;
    margin: 20rpx;
    font-size: 20px;
    font-weight: bold;
}
.number-input {
    color:#000;
    border-radius: 10rpx;
    margin: 20rpx;
    font-size: 20px;
    background-color: #0a0a0a;
    color: #fff;
}
.equals-input {
    color:#000;
    border-radius: 10rpx;
    margin: 20rpx;
    font-size: 20px;
    background-color: #F56615;
    color: #000;
}